<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vap.whistler">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/AppThemeNoActionBar">
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.LiveActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity
            android:name=".activities.SettingsActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.PredictionPopupActivity"
            android:theme="@style/NoTitleDialog" />
        <activity
            android:name=".activities.NewJoinGroupActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.GroupInfoActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.UserPredictionReportActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".activities.UserMatchsReportActivity"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>